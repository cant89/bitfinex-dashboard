{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "#/types": ["types"],
      "#/store": ["store"],
      "#/store/*": ["store/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
